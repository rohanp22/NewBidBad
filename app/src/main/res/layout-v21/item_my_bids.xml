<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    android:layout_marginRight="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/bidHistoryImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/jbl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bidHistoryImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bidHistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bitterbold"
            android:text="JBL Boombox"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Bluetooth party speaker"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@id/bidHistoryTitle" />

        <TextView
            android:id="@+id/soldfortext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bitter"
            android:text="Sold for"
            android:textColor="@color/white"
            android:textSize="5sp"
            app:layout_constraintEnd_toEndOf="@id/soldtext"
            app:layout_constraintStart_toStartOf="@+id/soldtext"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/soldtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bitter"
            android:text="45"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/soldfortext" />

        <TextView
            android:id="@+id/bidHistoryAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bitterbold"
            android:text="$2500"
            android:textColor="@color/colorSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/view1" />

        <TextView
            android:id="@+id/yourbidtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="Your bid"
            android:fontFamily="@font/dm_sans_regular"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/bidHistoryAmount"
            app:layout_constraintStart_toEndOf="@id/view1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank"
            android:textSize="12sp"
            android:fontFamily="@font/dm_sans_regular"
            app:layout_constraintBottom_toTopOf="@id/endsin"
            app:layout_constraintEnd_toEndOf="@id/endsin" />

        <TextView
            android:id="@+id/endsin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/digital"
            android:letterSpacing="0.1"
            android:text="#234"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>